@model List<CategoryListViewModel>



<div>
    <div class="float-start"> <h2>Categoriler</h2> </div>
    <div class="float-end"> <a asp-controller="Category" asp-action="New" class="btn btn-warning">Yeni Kategori</a> </div>
</div>

<div style="padding-top:75px">

    <table class="table table-striped" >
        <thead>
            <tr>
                <th>Kategori Adı</th>
                <th></th>

            </tr>



        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>

                    </td>

                </tr>
            }



        </tbody>


    </table>




</div>



